check process haproxy-riak
  with pidfile <%= @pidfile %>
  start program = "/etc/init.d/haproxy start" with timeout 60 seconds
  stop program = "/etc/init.d/haproxy stop" with timeout 60 seconds
  if mem > 512.0 MB for 2 cycles then restart
  if cpu > 100% for 2 cycles then restart
  group haproxy_riak

